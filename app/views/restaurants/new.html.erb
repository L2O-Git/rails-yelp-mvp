<%= simple_form_for @restaurant, url: restaurant_reviews_path(params[:id]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>

  <%= f.input :address %>

  <%= f.input :category, as: :radio_buttons, collection: Restaurant::CATEGORY, wrapper: :vertical_collection_inline %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>
